{
  "manifest_version": 3,
  "name": "Document Downloader",
  "version": "1.0",
  "permissions": ["downloads", "activeTab", "scripting"],
  "action": {
    "default_icon": "icon.png",
    "default_title": "Download Documents"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
